{
  "hosting": {
    "public": "web_interface/static",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/__pycache__/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "agentic-api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET,POST,PUT,DELETE,OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type,Authorization"
          },
          {
            "key": "X-Powered-By",
            "value": "Agentic AI System - Made by Mulky Malikul Dhaher ðŸ‡®ðŸ‡©"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  },
  "functions": {
    "source": "firebase/functions",
    "runtime": "python312",
    "predeploy": [
      "pip install -r requirements.txt -t firebase/functions/lib"
    ]
  },
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "database": {
    "rules": "firebase/database.rules.json"
  },
  "remoteconfig": {
    "template": "firebase/remoteconfig.template.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  },
  "extensions": {},
  "$schema": "https://firebase.google.com/firebase.schema.json"
}
